{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "app/*": ["src/*"]
        },
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules"
    ]
}
